{% extends 'GalaxyBackendBundle::layout.html.twig' %}

{% block body %}
<div class="container" style="margin-top: 20px;">
<table style="width: 1000px;" class="table table-bordered table-striped table-hover table-condensed">
    <thead>
  <tr style="background-color: #f6f7f8; background-image: linear-gradient(to bottom, #FFFFFF, #E6E6E6);">
   <td style="padding: 4px; text-align: center; vertical-align: middle;"><b>id</b></td>
   <td style="padding: 4px; text-align: center; vertical-align: middle;"><b>name</b></td>
   <td style="padding: 4px; text-align: center; vertical-align: middle;"><b>a</b></td>
   <td style="padding: 4px; text-align: center; vertical-align: middle;"><b>b</b></td>
   <td style="padding: 4px; text-align: center; vertical-align: middle;"><b>c</b></td>
   <td style="padding: 4px; text-align: center; vertical-align: middle;"><b>delta</b></td>
   <td style="padding: 4px; text-align: center; vertical-align: middle;"><b> </b></td>
  </tr>
 </thead>
{% for typeArr in types %}
{% set type = typeArr["type"]%}
{% set form = typeArr["form"]%}

<tr>
    <td style="padding: 4px; text-align: center; vertical-align: middle;">{{ type.id }}</form>
    {% set form_attrs = {attr: {form: 'updateCoord'~loop.index, class: 'span2'}}%}</td>
    <td style="padding: 4px; text-align: center; vertical-align: middle;">{{ type.name }}</td>
    <td style="width: 120px;">{{ form_widget(form.a, form_attrs, {'attr': {'id': 'event_notification'}}) }}</td>
    <td style="width: 120px;">{{ form_widget(form.b, form_attrs) }}</td>
    <td style="width: 120px;">{{ form_widget(form.c, form_attrs) }}</td>
    <td style="width: 120px;">{{ form_widget(form.delta1, form_attrs) }}</td>
    <td style="width: 120px; padding-right: 0px;">
        <button type="submit" class="btn btn-primary" form="{{'updateCoord'~loop.index}}" ><i class="icon-hdd"></i>Сохранить</button>
        <div style="display: none;">
            <form id="updateCoord{{loop.index}}" class="updateCoords" method="POST" action="{{path('update_coordinates')}}">{{form_rest(form)}}</form>
        </div>
    </td>

</tr>
{% endfor %}
</table>
        </div>
{% endblock body %}