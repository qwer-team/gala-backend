{% extends 'GalaxyBackendBundle::layout.html.twig' %}

{% block body %}
<form action="{{path('type_config', {'tag': tag})}}" method="POST" {{ form_enctype(form) }}>
    {%set label1%}
       {% if tag == 'theft'%}
        Уменьшение уровня флиппера на 1
       {% elseif tag == 'trap' %}
        Тип 1
       {%else%}
        Сообщение
       {%endif%}
    {% endset%}
    {% if tag != 'message'%}
        {{form_row(form.message1, {label: label1})}}
    {% endif %}
    {% if tag == 'theft'%}
        {{form_row(form.message2, {label: 'Уменьшение уровня флиппера на 2'})}}
    {% endif%}
    {% if tag == 'trap'%}
        {{form_row(form.message2, {label: 'Тип 2'})}}
    {% endif%}
    {% if tag == 'message'%}
        {{ form_row(form.messActive) }}
        {{ form_row(form.messCost) }}
        <br />
        {{ form_row(form.messCountCost) }}
        {{ form_row(form.messCountDepActive) }}
        <br />
    {% endif %}
    {% if tag == 'black'%}
        {{form_row(form.hours, {label: 'Часы'})}}
        {{form_row(form.minutes, {label: 'Минуты'})}}
    {% endif%}
        <br /> 
        <br /> 
    {% if type.file1 %}<object type="application/x-shockwave-flash" id="myContent" name="myContent" style="visibility: visible;" data="{{ type.file1 }}" width="290" height="150"><param name="menu" value="false"></object>{% endif %}
    {{form_row(form.fl1, {label: 'Флеш1'})}}
    {{form_row(form.fileDelete1, {label: 'Удалить'})}}
    <br /> 
    <img src="{{ type.file2 }}">
    {{form_row(form.fl2, {label: 'Картинка1'})}}
    {{form_row(form.fileDelete2, {label: 'Удалить'})}}
    <br /> 
    {% if type.file3 %}<object type="application/x-shockwave-flash" id="myContent" name="myContent" style="visibility: visible;" data="{{ type.file3 }}" width="290" height="150"><param name="menu" value="false"></object>{% endif %}
    {{form_row(form.fl3, {label: 'Флеш2'})}}
    {{form_row(form.fileDelete3, {label: 'Удалить'})}}
    <br /> 
    <img src="{{ type.file4 }}">
    {{form_row(form.fl4, {label: 'Картинка2'})}}
    {{form_row(form.fileDelete4, {label: 'Удалить'})}}
    <div style="display:none;">{{form_rest(form)}}</div>
    <br />
    <button type="submit" class='btn btn-primary'>Сохранить</button>
</form>
{% endblock %}