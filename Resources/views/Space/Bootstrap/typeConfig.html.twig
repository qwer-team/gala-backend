{% extends 'GalaxyBackendBundle::layout.html.twig' %}

{% block body %}
<form action="{{path('type_config', {'tag': tag})}}" method="POST">
    {%set label1%}
       {% if tag == 'theft'%}
        Уменьшение уровня флиппера на 1
       {% elseif tag == 'trap' %}
        Тип 1
       {%else%}
        Сообщение
       {%endif%}
    {% endset%}
    {% if tag != 'message'%}
        {{form_row(form.message1, {label: label1})}}
    {% endif %}
    {% if tag == 'theft'%}
        {{form_row(form.message2, {label: 'Уменьшение уровня флиппера на 2'})}}
    {% endif%}
    {% if tag == 'trap'%}
        {{form_row(form.message2, {label: 'Тип 2'})}}
    {% endif%}
    {% if tag == 'message'%}
        {{ form_row(form.messActive) }}
        {{ form_row(form.messCost) }}
        <br />
        {{ form_row(form.messCountCost) }}
        {{ form_row(form.messCountDepActive) }}
        <br />
    {% endif %}
    {% if tag == 'black'%}
        {{form_row(form.hours, {label: 'Часы'})}}
        {{form_row(form.minutes, {label: 'Минуты'})}}
    {% endif%}
        {{form_row(form.image, {label: 'Путь к картинке'})}}
        <br />
        {% if imgType == "swf" %}
        <object type="application/x-shockwave-flash" id="myContent" name="myContent" style="margin-left: 25%; visibility: visible;" data="/bundles/galaxybackend/{{ type.image }}" width="290" height="150"><param name="menu" value="false"></object>
        {% elseif type.image != '' %}
        <img src="/bundles/galaxybackend/{{ type.image }}">
        {% endif %}
        <div style="display:none;">{{form_rest(form)}}</div>
    <br />
    <button type="submit" class='btn btn-primary'>Сохранить</button>
</form>
{% endblock %}