<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="galaxy.container.aware.class">Galaxy\BackEndBundle\Listener\ContainerAware</parameter>
        <parameter key="segment.service.class">Galaxy\BackEndBundle\Service\SegmentService</parameter>
        
        <parameter key="points.in.space">1000000000</parameter>
        
        <parameter key="segment.update.url">http://localhost:8080/gala/segment/reset/</parameter>
        <parameter key="get.segment.url">http://localhost:8080/gala/segment/list</parameter>
        <parameter key="update.segment.length.url">http://localhost:8080/gala/segment/update/</parameter>
        <parameter key="get.points.on.segment.url">http://localhost:8080/gala/subtype/getPointsOnSegment/</parameter>
        <parameter key="save.subtype.url">http://localhost:8080/gala/subtype/save/</parameter>
    </parameters>

    <services>
        <service id="galaxy.container.aware" abstract="true" class="%galaxy.container.aware.class%" >
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="segment.service" parent="galaxy.container.aware" class="%segment.service.class%"/>
    </services>
    
</container>
